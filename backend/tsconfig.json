{
    "compilerOptions": {
      "target": "ES2020",               
      "module": "commonjs",            
      "rootDir": "src",                
      "outDir": "dist",                
      "strict": true,                  
      "esModuleInterop": true,         
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src", "src/model"],
    "exclude": ["node_modules"]
  }
  